#=======================================================#
#                    Call SConscript                    #
#=======================================================#

SConscript(
    "SConscript.py",
    variant_dir = "build",
    duplicate   = 0,
    exports     = [
        "REPO_ROOT_DIR",
        "ANTLR_LIB_DIR",
        "COMPILE",
