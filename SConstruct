import sys
import os
import SCons

# Set up default environment path
DefaultEnvironment(
    ENV = {
        "PATH" : os.environ["PATH"]
    },
)

#=======================================================#
#                       Constants                       #
#=======================================================#

ANTLR_LIB_DIR = Dir("libs")
REPO_ROOT_DIR = Dir(".")
COMPILE       = ARGUMENTS.get("run", None)

